<h3>{{{ helpDialogTitle }}}</h3>

<div class="breadcrumbs">
  <div class="item">
    <a class="next-view-link" data-help-dialog-next-view="TypeOfIssueView">{{{ t 'app.typeofissue' }}}</a>
  </div>
  <div class="separator unselectable">&gt;</div>
  <div class="item">
    {{{ t 'app.helpdialog.accessibilityissue.link' }}}
  </div>
</div>

<p>
  {{{ t 'app.helpdialog.accessibilityissue.text' }}}
</p>

<ul class="help-dialog-choice-list">
 <li>
    <a class="next-view-link" data-help-dialog-next-view="PlatformIssueView">
      {{{ t 'app.helpdialog.platformissue.link' }}}
    </a> 
  </li>
  <li>
    <a class="next-view-link" data-help-dialog-next-view="AccessibilityToolsAndDocumentationsView">
    {{{ t 'app.helpdialog.accessibilityissuewithcourse.link' }}}
    </a> 
  </li>
</ul>

<div>
  <button class="help-dialog-back-button action-primary" data-help-dialog-previous-view="TypeOfIssueView">{{{ t 'app.back' }}}</button>
</div>