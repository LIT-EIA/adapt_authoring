<div class="location-title-inner">
  {{#if breadcrumbs}}
    <nav aria-label="Breadcrumb" class="breadcrumbs">
      <ol class="breadcrumbs-list">
        {{#each breadcrumbs}}
          <li class="item">
            {{#if @last}}
              <a href="{{url}}" aria-current="page">{{title}}</a>
            {{else}}
              {{#if url}}
                <a href="{{url}}">{{title}}</a>
              {{else}}
                {{title}}
              {{/if}}
            {{/if}}
          </li>
          {{#unless @last}}
            <li aria-hidden="true" class="separator unselectable">&gt;</li>
          {{/unless}}
        {{/each}}
      </ol>
    </nav>
  {{/if}}
  {{#if title}}
    <div class="titles">
      {{#if course}}
        <div class="course">{{course.title}}</div>
      {{/if}}
      <div class="title">{{title}}</div>
    </div>
  {{/if}}
</div>
