<div class="slider-inner component-inner slider-component">
  <div
    class="slider-widget component-widget">
    <div class="slider-holder clearfix">
      <div class="slider-scale-numbers clearfix">
        {{#each _items}}
        <div class="base slider-scale-number" data-id="{{value}}" aria-hidden="true">{{value}}</div>
        {{/each}}
        <div class="slider-modelranges"></div>
        <div class="slider-answer component-item-color component-item-text-color"></div>
        <div class="slider-scale-marker component-item-color component-item-text-color a11y-ignore" aria-hidden="true"
          tabindex="-1"></div>
      </div>
      <div class="slider-scaler-wrapper clearfix">
        <div class="slider-scaler component-item-color">
          <div class="slider-scale-start-marker slider-line component-item-color" style="width: 21px; background-color: #ccced1;"></div>
          <div class="slider-markers"></div>
          <div class="slider-scale-end-marker slider-line component-item-color" style="background-color: #ccced1;"></div>
        </div>
      </div>

      <div class="slider-background">
        <div
          class="slider-item component-item">
          <input type="range" role="slider" value="{{ initValue }}"
            min="{{ start }}" max="{{ end }}"
            aria-valuenow="{{ initValue }}"
            aria-valuemin="{{ min }}" aria-valuemax="{{ max }}" data-rangeslider
            data-direction="ltr">
        </div>
      </div>
    </div>
  </div>
  <div class="buttons">
  </div>
</div>
